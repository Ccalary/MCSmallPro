.room-item {
  border-radius: 10rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  height: 250rpx;
  overflow: hidden;
}

.room-item-left {
  position: relative;
  width: 250rpx;
  height: 100%;
}

.room-item-right {
  margin-left: 250rpx;
  height: 100%;
  padding: 30rpx 20rpx;
}

.room-item-left-content {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  right: 20rpx;
  bottom: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.room-item-avatar {
  width: 100%;
  height: 100%;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.room-item-left-bottom {
  display: flex;
  justify-content: space-between;
}

.icon-people-count, .icon-like {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
  vertical-align: baseline;
}

.room-product-images {
  display: flex;
  height: 80rpx;
}

.room-product-images image, .room-product-images .room-product-info {
  width: 20%;
  height: 100%;
}

.room-product-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff2f9;
  color: #ff5f8d;
  font-size: 18rpx;
}