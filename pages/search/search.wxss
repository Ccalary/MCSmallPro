/* pages/search/search.wxss */

page {
  height: 100%;
}

.page {
  background-color: #ff5f8d;
  color: #fff;
  height: 100%;
}

.search {
  display: flex;
  background-color: #ff7fa2;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}

.search image {
  width: 30rpx;
  height: 30rpx;
  margin-top: 10rpx;
}

.search input {
  flex-grow: 1;
  margin-left: 15rpx;
  font-size: 28rpx;
}

.icon-remove {
  width: 26rpx;
  height: 26rpx;
}

.search-histories {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.search-history-item {
  background-color: #ff7fa2;
  padding: 15rpx 30rpx;
  border-radius: 50rpx;
  margin: 25rpx 22rpx 0 0;
}

.skin-green.page {
  background-color: #148924;
}

.skin-blue.page {
  background-color: #1db3d8;
}

.skin-gray.page {
  background-color: #505050;
}

.skin-green .search {
  background-color: #42a150;
}

.skin-blue .search {
  background-color: #4ac3e1;
}

.skin-gray .search {
  background-color: #727272;
}

.skin-green .search-history-item {
  background-color: #42a150;
}

.skin-blue .search-history-item {
  background-color: #4ac3e1;
}

.skin-gray .search-history-item {
  background-color: #727272;
}
