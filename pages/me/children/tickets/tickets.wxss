/* pages/me/children/tickets/tickets.wxss */
page{
  background-color: #ffffff;
  height: 100%;
  color: #333333;
}

.top-tab {
  height: 90rpx;
  display: flex;
  border-bottom: 2rpx solid #f4f4f4;
  font-size: 30rpx;
  line-height: 90rpx;
  text-align: center;
}

.tab-item {
  flex: 1;
  margin: 0 20rpx 0 20rpx;
}

.on {
  color: #ff5f8d;
  border-bottom: 4rpx solid #ff5f8d;
}

.item {
  height: 220rpx;
  padding: 0rpx 30rpx 0 30rpx;
  margin: 30rpx 30rpx 0 30rpx; 
  background-image: url('http://res.o2o.com.cn:8082/img/de7662bf67d14607afb0eccd1d3da8ec');
}

.item-top {
  height: 150rpx;
  border-bottom: 2rpx solid #ff9999;
  padding-bottom: 10rpx;
  display: flex;
  justify-content: space-between
}

.item-left {
  display: flex;
  align-items: flex-end;
}

.item-centent {
  font-size: 50rpx;
}

.money {
  font-size: 120rpx;
  align-self: stretch;
}

.item-detail {
  display: flex;
  flex-direction: column;
}

.use {
  padding-left: 5rpx;
  font-size: 28rpx;
  color: #999999;
}

.btn-use {
  height: 60rpx;
  background-color: #ff5f8d;
  color: #ffffff;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  align-self: flex-end;
}

.item-bottom {
  height: 70rpx;
  line-height: 70rpx;
}
