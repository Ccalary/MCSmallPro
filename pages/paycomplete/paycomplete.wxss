/* pages/paycomplete/paycomplete.wxss */

page {
  background-color: white;
}

.pay-money {
  margin-top: 80rpx;
  align-items: center;
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid lightgray;
}

.pay-text {
  margin-top: 20rpx;
  color: black;
  font-size: 30rpx;
}

.pay-money-text {
  margin-top: 20rpx;
  color: black;
  font-size: 68rpx;
  margin-bottom: 50rpx;
}

.paydata-list {
  margin-top: 25rpx;
  padding-bottom: 25rpx;
  border-bottom: 1rpx solid lightgray;
}

.paydata-list-item {
  display: flex;
  height: 50rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.paydata-list-item-name {
  margin-left: 20rpx;
  color: #b0b0b0;
}

.paydata-list-item-content {
  margin-right: 20rpx;
  color: gray;
}

.pay-result {
  margin-top: 100rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.pay-result-button {
  padding-left: 40rpx;
  padding-right: 40rpx;
  font-size: 26rpx;
  color: #ff5f8d;
  border: 1rpx solid #ff5f8d;
  background-color: white;
}



