/* pages/me/children/orderDetail/orderDetail.wxss */
page{
  background-color: #efefef;
  height: 100%;
  color: black;
  font-size: 24rpx
}

.top-time {
  background-color: #ff5f8d;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  color: #ffffff;
}

.top-title {
  font-size: 30rpx;
}

.top-time-right{
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  border: 2rpx solid #cccccc
}

.top-right-text {
   padding: 10rpx 20rpx;
}

.address {
  height: 110rpx;
  display: flex;
  padding: 0 30rpx;
  align-items: center;
  background-color: #ffffff;
}
/* 地址 */
.add-img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.add-name {
  color: #666666
}

.add-address {
  color: #999999
}

/* 产品详情 */
.product-view {
  background-color: #ffffff;
  margin-top: 20rpx;
}
.pro-top {
  height: 80rpx;
  border-bottom: 2rpx solid #f4f4f4;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  justify-content: space-between;
  font-size: 30rpx;
}

.pro-contact {
  display: flex;
  position: relative
}

.contact-btn {
  opacity: 0;
  position: absolute;
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
  bottom: 0rpx;
}

.order-detail {
  border-bottom: 2rpx solid #f4f4f4;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.pro-image {
  width: 150rpx;
  height: 150rpx;
  margin-left: 20rpx;
}

.pro-detail {
  flex: 1;
  height: 150rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.pro-name {
  font-size: 24rpx;
  color: black;
}

.pro-content {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #9c9c9c
}

.pro-num-price {
  height: 150rpx;
  margin-right: 20rpx;
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
}

.pro-price {
  font-size: 24rpx;
  color: #9c9c9c
}

.pro-num {
  font-size: 24rpx;
  color: #9c9c9c;
  align-self: flex-end;
}

/* 价格和运费 */
.pro-all-price {
   color: #666666;
   display: flex;
   flex-direction: column;
   padding: 10rpx 0;
   border-bottom: 2rpx solid #f4f4f4; 
}

.pro-real-price {
  display: flex;
  justify-content: space-between;
  padding: 5rpx 30rpx;
}

.pro-total-price {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 30rpx;
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
  border-bottom: 2rpx solid #f4f4f4;
}

.order-time-num {
  padding: 15rpx 30rpx;
  color: #666666
}

.bottom-view {
  height: 80rpx;
  background-color: #ffffff;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}

.bottom-total {
  display: flex;
  align-items: center;
}

.bottom-price {
  font-size: 30rpx;
  color: #ff5f8d
}

.bottom-btn {
  background-color: #ff5f8d;
  color: #ffffff;
  padding: 10rpx 40rpx;
  border-radius: 8rpx;
}