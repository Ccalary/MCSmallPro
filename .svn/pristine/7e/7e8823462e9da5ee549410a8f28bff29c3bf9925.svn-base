.messages {
  height: 100%;
  position: relative;
}

.messages-scroll-view {
  height: 100%;
}

.messages-inner {
  padding: 20rpx 30rpx;
}

.message-item {
  margin-bottom: 20rpx;
  line-height: 1.5em;
}

.message-item-name {
  color: #ffe400;
}

.message-icon-popupInput {
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
  width: 70rpx;
  height: 70rpx;
}

.message-chat-holder {
  height: 60rpx;
}

.message-chat {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 99;
  display: flex;
  flex-direction: column;
}

.message-icon-hideInput {
  width: 70rpx;
  height: 70rpx;
  align-self: flex-end;
  margin-bottom: 20rpx;
  margin-right: 30rpx;
}

.message-input-box {
  display: flex;
  background-color: #fe8faf;
  padding: 20rpx 30rpx;
}

.message-input {
  flex-grow: 1;
  border-radius: 10rpx;
  background-color: #ffc2d2;
  padding:5rpx 20rpx;
  color: #ff5f8d;
}

.message-send{
  margin-left: 30rpx;
  background-color: #ff5f8d;
  color: white;
}
