/* pages/search/search.wxss */

page {
  background-color: #ff5f8d;
  color: #fff;
}

.search {
  display: flex;
  background-color: #ff7fa2;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}

.search image {
  width: 30rpx;
  height: 30rpx;
  margin-top: 10rpx;
}

.search input {
  flex-grow: 1;
  margin-left: 15rpx;
  font-size: 28rpx;
}

.icon-remove {
  width: 26rpx;
  height: 26rpx;
}

.search-histories {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.search-history-item {
  background-color: #ff7fa2;
  padding: 15rpx 30rpx;
  border-radius: 50rpx;
  margin: 25rpx 22rpx 0 0;
}
