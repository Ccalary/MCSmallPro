/* pages/me/children/evaluate/evaluate.wxss */

.top-view {
  height: 180rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0rpx 15rpx;
}

.top-image {
  width: 160rpx;
  height: 160rpx;
}

.top-right-view {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  justify-content: center;
}

.top-star {
  display: flex;
  flex-direction: row;
}

.star-img {
  margin-top: 30rpx;
  width: 34rpx;
  height: 34rpx;
  padding-right: 10rpx;
}

.text-view {
  height: 250rpx;
  padding: 20rpx 20rpx 40rpx 20rpx;
  position: relative;
}

.textarea-view {
  height: 100%;
  width: 100%;
}

.text-num {
  position: absolute;
  bottom: 8rpx;
  right: 10rpx;
}

.bottom-view {
  background-color: #ffffff;
  padding: 0rpx 0rpx 20rpx 0rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.photo-view {
  width: 21%;
  height: 170rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  position: relative;
}

.photo {
  width: 100%;
  height: 100%;
}
.photo-del-view {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: -10rpx;
  top: -10rpx;
}
.photo-del {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 0rpx;
  top:  0rpx;
}

.add-btn {
  margin-left: 20rpx;
  margin-top: 20rpx;
  width: 21%;
  height: 170rpx;
  border: 2rpx solid #f4f4f4;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #999999;
}

.add-image {
  margin-bottom: 10rpx;
  width: 67rpx;
  height: 56rpx;
}

.admit-btn {
  position: fixed;
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
  background-color: #ff5f8d;
  color: #ffffff;
}

.admit-hover {
  background-color: #ff5f8d;
  opacity: 0.7
}

.skin-green {
  background-color: #148924;
}

.skin-blue {
  background-color: #1db3d8;
}
