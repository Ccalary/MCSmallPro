.products-scroll-view {
  height: 100%;
  background-color: #ff7fa2;
}

.products {
  padding: 20rpx;
}

.product-item {
  height: 180rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.product-rec {
  background-color: #ec98b0;
  padding: 20rpx;
}

.product-item:last-child {
  margin-bottom: 0;
}

.product-item .product-image {
  height: 100%;
  width: 100%;
}

.product-item .product-info {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-item .product-num {
  background-color: rgba(0, 0, 0, 0.3);
  align-self: flex-start;
  padding: 5rpx 10rpx;
}

.product-rec .product-num {
  background-color: rgba(255, 0, 0, 0.4);
  font-size: 22rpx;
}

.product-item .product-price {
  background-color: rgba(0, 0, 0, 0.4);
  padding: 5rpx 10rpx;
  align-self: flex-start;
}
