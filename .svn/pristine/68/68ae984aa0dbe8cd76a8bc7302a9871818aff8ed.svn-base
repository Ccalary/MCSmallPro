.carts {
  height: 100%;
  background-color: #f3f3f4;
  color: #666;
}

.carts .cart-item {
  margin-bottom: 4rpx;
  padding: 30rpx 20rpx;
  background-color: white;
  display: flex;
  align-items: center;
}

.carts .product-image {
  width: 150rpx;
  height: 150rpx;
}

.carts .cart-remove {
  width: 40rpx;
  height: 40rpx;
}

.carts .product-qty input, .carts .product-qty button {
  width: 60rpx;
  height: 60rpx;
  border: 2rpx solid #e3e3e3;
  text-align: center;
  line-height: 60rpx;
}

.carts .product-qty button {
  margin: 0;
  border-radius: 0;
  background-color: transparent;
  color: #ff5f8d;
  padding: 0;
  line-height: 55rpx;
}

.carts .product-qty button::after {
  display: none;
}

.carts .product-qty button[disabled] {
  color: rgba(0, 0, 0, 0.3);
}

.carts .product-qty input {
  border-left: none;
  border-right: none;
  height: 56rpx;
  line-height: 56rpx;
}

.cart-bottom-holder{
  height: 94rpx;
}

.carts .cart-bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: white;
  padding: 20rpx;
  border-top: 2rpx solid black;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 999;
}

.carts .cart-go-order{
  background-color: #ff5f8d;
  color: white;
  padding: 10rpx 30rpx;
  margin-left: 20rpx;
  font-size: 24rpx;
}

.skin-green .product-qty button{
  color: #148924;
}

.skin-blue .product-qty button{
  color: #1db3d8;
}

.skin-green .cart-go-order{
  background-color: #148924;
}

.skin-blue .cart-go-order{
  background-color: #1db3d8;
}