.messages {
  height: 100%;
  position: relative;
}

.messages-scroll-view {
  height: 100%;
}

.messages-inner {
  padding: 20rpx 30rpx;
}

.message-item {
  margin-bottom: 20rpx;
  line-height: 1.5em;
}

.message-item-name {
  color: #ffe400;
}

.message-icon-popupInput {
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
  width: 70rpx;
  height: 70rpx;
}

.message-chat-holder {
  height: 60rpx;
}

.message-chat {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 99;
  display: flex;
  flex-direction: column;
}

.message-icon-hideInput {
  width: 70rpx;
  height: 70rpx;
  align-self: flex-end;
  margin-bottom: 20rpx;
  margin-right: 30rpx;
}

.message-input-box {
  display: flex;
  background-color: #fe8faf;
}

.message-input {
  flex-grow: 1;
  border-radius: 10rpx;
  background-color: #ffc2d2;
  padding: 0rpx 20rpx;
  color: #ff5f8d;
  margin: 20rpx 30rpx;
  height: 2.3em;
}

.message-send {
  background-color: #ff5f8d;
  color: white;
  margin: 20rpx 30rpx 20rpx 0;
}

.skin-green .message-input-box {
  background-color: #42a150;
}

.skin-blue .message-input-box {
  background-color: #4ac3e1;
}

.skin-gray .message-input-box {
  background-color: #727272;
}

.skin-green .message-send {
  background-color: #148924;
}

.skin-blue .message-send {
  background-color: #1db3d8;
}

.skin-gray .message-send {
  background-color: #505050;
}

.skin-green .message-input {
  background-color: #42a150;
  color: #148924;
}
.skin-blue .message-input {
  background-color: #4ac3e1;
  color: #1db3d8;
}
.skin-gray .message-input {
  background-color: #999999;
  color: #505050;
}