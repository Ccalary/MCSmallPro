/* pages/me/me.wxss */
page{
  background-color: #efefef
}

/* 顶部 */
.header-container {
  height: 180rpx;
  width: 100%;
  background-image: url('http://res.o2o.com.cn:8082/img/de7662bf67d14607afb0eccd1d3da8ec'); 
  display: flex;
  flex-direction: row;
}

.header-image {
  height: 120rpx;
  width: 120rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
  border-radius: 120rpx;
  border: 4rpx solid white;
}

.header-message {
  margin-top: 30rpx;
  margin-left: 25rpx;
  height: 120rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around
}

.header-nickName {
  font-size: 40rpx;
  color: black
}

.header-address {
  font-size: 30rpx;
}

/* 中间流程部分 */
.center-flow {
  margin-top: 20rpx;
  height: 130rpx;
  background-color: white;
  display: flex;
  justify-content: space-around 
}
.center-item {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center; 
  align-items: center; 
  position: relative; 
}
.center-num {
  background-color: #FF3333;
  border-radius: 50%;
  position: absolute;
  color: #ffffff;
  right: 0rpx;
  top: 6rpx;
  font-size: 22rpx;
  padding: 0rpx 12rpx;
}

.center-item-image {
  width: 44rpx;
  height: 37rpx;
  margin: 10rpx;
}

.center-item-text {
  color: black;
  font-size: 24rpx
}

.list-view {
  margin-top: 20rpx;
  flex: 1;
  background: white;
}

.list-item {
  height: 90rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.list-item-line {
  border-bottom: 1rpx solid lightgray
}

.list-top {
  display: flex;
  align-items: center;
}

.list-image {
  width: 36rpx;
  height: 36rpx;
  
}
.list-text {
  margin-left: 20rpx;
  color: black;
  font-size: 30rpx;
}

.list-arrow {
  margin-right: 30rpx;
  width: 16rpx;
  height: 27rpx;
}

.contact-btn {
  opacity: 0;
  position: absolute;
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
  bottom: 0rpx;
}