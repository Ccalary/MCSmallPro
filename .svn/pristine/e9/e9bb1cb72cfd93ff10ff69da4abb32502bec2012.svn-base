/* pages/list/list.wxss */

.page {
  background-color: #ff5f8d;
  color: #fff;
  display: flex;
  flex-direction: column;
}

.search {
  display: flex;
  background-color: #ff7fa2;
  margin: 0 30rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}

.search image {
  width: 30rpx;
  height: 30rpx;
  margin-top: 10rpx;
}

.search input {
  flex-grow: 1;
  margin-left: 15rpx;
  font-size: 28rpx;
}

.search input-placeholder {
  color: #fff;
}

.tabs {
  display: flex;
  background-color: #ff7fa2;
  margin-top: 20rpx;
  padding: 0 20rpx;
}

.tab-item {
  flex-grow: 1;
  text-align: center;
  line-height: 3em;
}

.tab-item.active {
  border-bottom: 1px solid;
}

.tabs-content {
  flex-grow: 1;
  padding: 30rpx 30rpx 0;
  overflow-y: auto;
}

.zhubo-item {
  border-radius: 10rpx;
  background-color: #fff;
  margin-bottom: 10px;
  height: 300rpx;
  overflow: hidden;
}

.zhubo-item-left {
  position: relative;
  width: 250rpx;
  height: 100%;
}

.zhubo-item-right {
  margin-left: 250rpx;
  height: 100%;
  padding: 30rpx 20rpx;
}

.zhubo-item-left-content {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  right: 20rpx;
  bottom: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.zhubo-item-avatar {
  width: 100%;
  height: 100%;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.zhubo-item-left-bottom {
  display: flex;
  justify-content: space-between;
}

.icon-people-count, .icon-like {
  width: 24rpx;
  height: 24rpx;
  vertical-align: baseline;
}

.product-images {
  display: flex;
  height: 120rpx;
}

.product-images image, .product-images .product-info {
  width: 25%;
  height: 100%;
  margin-left: 2rpx;
}

.product-images .product-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff2f9;
  color: #ff5f8d;
  font-size: 22rpx;
}

.skin-green.page {
  background-color: #148924;
}

.skin-blue.page {
  background-color: #1db3d8;
}

.skin-gray.page {
  background-color: #505050;
}

.skin-green .search {
  background-color: #42a150;
}

.skin-blue .search {
  background-color: #4ac3e1;
}

.skin-gray .search {
  background-color: #727272;
}

.skin-green .tabs {
  background-color: #42a150;
}

.skin-blue .tabs {
  background-color: #4ac3e1;
}

.skin-gray .tabs {
  background-color: #727272;
}
