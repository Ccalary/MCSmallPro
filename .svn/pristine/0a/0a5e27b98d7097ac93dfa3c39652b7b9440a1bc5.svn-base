/* pages/searchResult/searchResult.wxss */
@import "children/products/products.wxss";
@import "children/rooms/rooms.wxss";
@import "children/zhubos/zhubos.wxss";

page {
  background-color: #ff5f8d;
  color: #fff;
}

.search {
  display: flex;
  background-color: #ff7fa2;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  margin: 0 30rpx;
}

.search image {
  width: 30rpx;
  height: 30rpx;
  margin-top: 10rpx;
}

.search input {
  flex-grow: 1;
  margin-left: 15rpx;
  font-size: 28rpx;
}

.tabs {
  display: flex;
  background-color: #ff7fa2;
  margin-top: 20rpx;
}

.tabs-content-scroll-view {
  height: 100%;
}

.tab-item {
  flex-grow: 1;
  text-align: center;
  line-height: 3em;
}

.tab-item.active {
  border-bottom: 1px solid;
}

.tabs-content-container {
  padding: 0 30rpx 0;
}
