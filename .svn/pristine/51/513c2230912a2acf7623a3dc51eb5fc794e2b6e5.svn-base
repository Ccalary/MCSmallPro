/* pages/product/product.wxss */
@import "/utils/wxParse/wxParse.wxss";
@import "/pages/common/cart/cart.wxss";

page {
  background-color: #efefef;
  width: 100%;
}

.main-content-section {
  position: relative;
  width: 100%;
  margin-bottom: 100rpx;
}

.swiper-section {
  position: relative;
  width: 100%;
  height: 500rpx;
}

.swiper {
  position: absolute;
  height: 500rpx;
  width: 100%;
}

.swiper-item {
  display: block;
  height: 100%;
  width: 100%;
}

.swiper-image {
  height: 100%;
  width: 100%;
}

.swiper-cart-image {
  right: 20rpx;
  top: 20rpx;
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}

.price-name {
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 20rpx;
  width: 100%;
  background-color: white;
}

.price-section {
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}

.price-text_1 {
  margin-top: 10rpx;
  color: black;
  font-size: 20rpx;
}

.price-text_2 {
  color: black;
  font-size: 50rpx;
}

.price-text_3 {
  color: black;
  font-size: 40rpx;
}

.name-section {
  width: 100%;
  padding-bottom: 20rpx;
}

.name-text {
  color: black;
  font-size: 30rpx;
}

.postage-text {
  color: #d1d1d1;
  font-size: 20rpx;
  display: block;
}

.goods-choose-section {
  height: 80rpx;
  display: flex;
  background-color: white;
  margin-top: 15rpx;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.goods-choose {
  display: flex;
  margin-left: 20rpx;
  align-items: center;
}

.goods-choose-text-1 {
  color: #848484;
  margin-right: 14rpx;
  font-size: 22rpx;
}

.goods-choose-text-2 {
  color: #ff5f8d;
  font-size: 22rpx;
}

.goods-choose-arrow {
  margin-right: 30rpx;
  width: 16rpx;
  height: 27rpx;
}

.comment-section {
  position: relative;
  background-color: white;
  margin-top: 15rpx;
}

.comment-top {
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
  height: 60rpx;
  align-items: center;
  justify-content: space-between;
}

.comment-item {
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
}

.comment-item-content {
  margin-top: 15rpx;
  color: #5c5c5c;
  font-size: 24rpx;
}

.comment-item-image-item {
  width: 150rpx;
  margin-right: 20rpx;
  height: 150rpx;
  margin-top: 20rpx;
}

.comment-item-image {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
}

.comment-item-attr {
  margin-top: 10rpx;
  margin-bottom: 30rpx;
  color: #848484;
  font-size: 22rpx;
}

.comment-head-name {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.comment-head-image {
  top: 20rpx;
  width: 70rpx;
  height: 70rpx;
  border: 2rpx solid #c4c4c4;
  border-radius: 70rpx;
}

.comment-item-name {
  margin-left: 10rpx;
  color: #050505;
  font-size: 26rpx;
}

.comment-item-name-star {
  margin-left: 14rpx;
  display: flex;
  flex-direction: column;
}

.list-item-line {
  border-bottom: 1rpx solid lightgray;
}

.imagetext-section {
  position: relative;
  background-color: white;
  margin-top: 15rpx;
}

.imagetext-title-text {
  color: black;
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid lightgray;
}

.imagetext-title {
  display: flex;
  justify-content: center;
}

.service-bottom-section {
  bottom: 120rpx;
  display: flex;
  flex-direction: row;
  position: fixed;
  height: 100rpx;
  width: 100%;
}

.service-bottom {
  position: absolute;
  right: 20rpx;
  height: 100rpx;
  width: 100rpx;
}

.pro-contact {
  display: flex;
  height: 100rpx;
  width: 100rpx;
  position: relative;
}

.service-image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  position: absolute;
  border-radius: 100rpx;
}

.contact-btn {
  position: absolute;
  opacity: 0;
  width: 100rpx;
  height: 100rpx;
}

.buy-bottom-section {
  background-color: white;
  bottom: 0rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  position: fixed;
  height: 100rpx;
}

.buy-bottom-blank {
  height: 100rpx;
  flex: 1;
}

.buy-addcart-btn {
  background-color: #ffe6e9;
  height: 100rpx;
  color: #fe547b;
  align-items: center;
  display: flex;
  font-size: 28rpx;
  justify-content: center;
  flex: 1;
}

.buy-btn {
  background-color: #fe547b;
  height: 100rpx;
  display: flex;
  font-size: 28rpx;
  color: white;
  justify-content: center;
  align-items: center;
  flex: 1;
}

.dialog-info-part {
  display: flex;
  flex-direction: column;
  background: white;
}

.dialog-image-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.dialog-image {
  margin-left: 20rpx;
  border-radius: 0%;
  width: 180rpx;
  height: 180rpx;
  top: -30rpx;
  position: absolute;
}

.dialog-price {
  margin-left: 210rpx;
  margin-top: 50rpx;
  display: flex;
  margin-bottom: 20rpx;
  flex-direction: column;
}

.dialog-goods-count {
  margin-left: 8rpx;
  color: black;
  font-size: 20rpx;
}

.dialog-dimensions-part {
  width: 100%;
  display: flex;
  margin: 20rpx;
  flex-direction: column;
}

.dialog-goods-count-part {
  width: 100%;
  display: flex;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 60rpx;
  flex-direction: column;
}

.dialog-dimensions-text {
  color: #848484;
  font-size: 22rpx;
}

.dialog-bottom-buy {
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 100rpx;
}

.dialog-close-btn {
  margin-right: 20rpx;
  margin-top: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.product-qty input, .product-qty button {
  width: 100rpx;
  height: 60rpx;
  border: 2rpx solid #e3e3e3;
  text-align: center;
  line-height: 58rpx;
}

.product-qty input {
  border-left: none;
  border-right: none;
  height: 56rpx;
  line-height: 56rpx;
}

.product-qty button {
  margin: 0;
  border-radius: 0;
  background-color: transparent;
  color: #ff5f8d;
}

.product-qty button::after {
  display: none;
}

.product-qty button[disabled] {
  color: rgba(0, 0, 0, 0.3);
}

.product-attr-item {
  padding: 10rpx 30rpx;
  border: 2rpx solid #e3e3e3;
  border-radius: 5rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
}

.product-attr-item.selected {
  border-color: #ff5f8d;
}

.star-item {
  width: 15px;
  height: 15px;
  margin-left: 5rpx;
  margin-right: 5rpx;
  vertical-align: top;
}

.star {
  display: flex;
  flex-direction: row;
}
