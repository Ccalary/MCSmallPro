/* pages/live/children/video/video.wxss */

.video {
  position: relative;
  width: 100%;
  height: 100%;
}

.video video {
  width: 100%;
  height: 100%;
}

.video .zhubo-info {
  display: flex;
  border-radius: 50rpx;
  background-color: rgba(0, 0, 0, 0.2);
  padding: 10rpx;
  margin: 20rpx 0 0 20rpx;
}

.video .zhubo-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.video .zhubo-name{
  max-width: 200rpx;
  margin-right: 20rpx;
}

.video .btn-attention{
  align-self: center;
  border-radius: 30rpx;
  border:2rpx solid #ff5f8d;
  color: #ff5f8d;
  padding: 15rpx 20rpx;
}

.video .image-like{
  width: 80rpx;
  height: 80rpx;
}