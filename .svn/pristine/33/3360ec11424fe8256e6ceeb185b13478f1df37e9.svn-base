/* pages/order/order.wxss */

.box {
  background-color: #fff;
  padding: 20rpx 30rpx;
}

.icon-location {
  width: 35rpx;
  height: 41rpx;
}

.icon-arrow-right {
  width: 13rpx;
  height: 25rpx;
}

.product-image {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx solid #e3e3e3;
}

.order-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  border-top: 2rpx solid #e3e3e3;
  padding-left: 30rpx;
}

.order-bottom-holder {
  height: 90rpx;
}

.btn-create-order {
  background-color: #ff5f8d;
  color: white;
  border-radius: 0;
  font-size: 24rpx;
  padding: 15rpx 50rpx;
}
