/* pages/me/children/order/order.wxss */

page{
  background-color: #efefef;
  height: 100%;
}
.main {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 顶部tab */
.swiper-tab {
  width: 100%;
  height: 90rpx;
  background-color: #f8f8f8;
  display: flex;
  text-align: center
}

.swiper-tab-text {
  flex: 1;
  color: #838383;
  font-size: 30rpx;
  line-height: 90rpx;
}
.swiper-on {
  color: #ff5f8d;
  border-bottom: 4rpx solid #ff5f8d;
}

/* 内容部分 */
.tab-content {
  flex-grow: 1;
}

.tab-view {
  height: 100%;
  background-color: #efefef;
}

/* 无内容界面 */
.tab-empty-view {
  height: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.empty-image {
  width: 208rpx;
  height: 93rpx;
  margin-bottom: 30rpx
}

.empty-text {
  font-size: 30rpx;
  color: #999;
}

.loading-view {
  position: absolute;
  top: 10rpx;
  text-align: center
}
/* 订单 */
.order-list-view {
  margin: 20rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
}

.order-top {
  font-size: 26rpx;
  color: #ff5f8d;
  line-height: 3em;
}

.order-detail {
  border-top: 1rpx solid #f4f4f4;
  border-bottom: 1rpx solid #f4f4f4;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.pro-image {
  width: 150rpx;
  height: 150rpx;
  margin-left: 20rpx;
}

.pro-detail {
  flex: 1;
  height: 150rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.pro-name {
  font-size: 24rpx;
  color: black;
}

.pro-content {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #9c9c9c
}

.pro-num-price {
  height: 150rpx;
  margin-right: 20rpx;
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
}

.pro-price {
  font-size: 24rpx;
  color: #9c9c9c
}

.pro-num {
  font-size: 24rpx;
  color: #9c9c9c;
  align-self: flex-end;
}

/* 底部 */
.order-bottom {
  height: 90rpx; 
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.order-btn {
  width: 200rpx;
  height: 50rpx; 
  font-size: 24rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 8rpx;
  margin-right: 20rpx
}

.order-evaluate {
  position: absolute;
  right: 0rpx;
  bottom: 10rpx;
}

.order-btn-left {
  color: #838383;
  border: 2rpx solid #c4c4c4;
}

.order-btn-right{
  color: #ffffff;
  background-color: #ff5f8d
}

.order-cancel {
  color: #ff5f8d;
  margin-right: 20rpx;
}

.skin-green {
  background-color: #148924;
}

.skin-blue {
  background-color: #1db3d8;
}

.skin-gray {
  background-color: #505050;
}

.skin-green .swiper-on {
  color: #148924;
  border-bottom: 4rpx solid #148924;
}

.skin-blue .swiper-on {
  color: #1db3d8;
  border-bottom: 4rpx solid #1db3d8;
}

.skin-gray .swiper-on{
  color: #505050;
  border-bottom: 4rpx solid #505050;
}

.skin-green .order-top {
  color: #148924;
}

.skin-blue .order-top {
  color: #1db3d8;
}

.skin-gray .order-top{
  color: #505050;
}

.skin-green .order-btn-right {
  background-color: #148924;
}

.skin-blue .order-btn-right {
  background-color: #1db3d8;
}

.skin-gray .order-btn-right {
  background-color: #505050;
}

.skin-green .order-cancel {
  color: #148924;
}

.skin-blue .order-cancel {
  color: #1db3d8;
}
.skin-gray .order-cancel {
  color: #505050;
}