/* pages/me/children/evaluateList/evaluateList.wxss */

page{
  background-color: #efefef;
  height: 100%;
}

.main-view {
  height: 100%;
}

.list-view {

}

.tab-empty-view {
  background-color: #ffffff;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center 
}

.empty-image {
  width: 208rpx;
  height: 93rpx;
  margin-bottom: 30rpx
}

.empty-text {
  font-size: 30rpx;
  color: #999;
}

/* 订单 */
.list-view {
  margin: 20rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
}

.order-top {
  font-size: 26rpx;
  color: #ff5f8d;
  line-height: 3em;
}

.order-detail {
  border-top: 1rpx solid #f4f4f4;
  border-bottom: 1rpx solid #f4f4f4;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.pro-image {
  width: 150rpx;
  height: 150rpx;
  margin-left: 20rpx;
}

.pro-detail {
  flex: 1;
  height: 150rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.pro-name {
  font-size: 24rpx;
  color: black;
}

.pro-content {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #9c9c9c
}

.pro-num-price {
  height: 150rpx;
  margin-right: 20rpx;
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
}

.pro-price {
  font-size: 24rpx;
  color: #9c9c9c
}

.pro-num {
  font-size: 24rpx;
  color: #9c9c9c;
  align-self: flex-end;
}

/* 底部 */
.order-bottom {
  height: 90rpx; 
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.order-btn {
  width: 200rpx;
  height: 50rpx; 
  font-size: 24rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 8rpx;
  margin-right: 20rpx
}

.order-evaluate {
  position: absolute;
  right: 0rpx;
  bottom: 10rpx;
}

.order-btn-left {
  color: #838383;
  border: 2rpx solid #c4c4c4;
}

.order-btn-right{
  color: #ffffff;
  background-color: #ff5f8d
}

.order-cancel {
  color: #ff5f8d;
  margin-right: 20rpx;
}
