/* utils/modal/modal.wxss */

.modal {
  z-index: 1050;
}

.modal .modal-shadow {
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  top: 0;
  background-color: rgba(15, 15, 26, 0.7);
}

.modal .modal-content {
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  max-height: 75%;
  display: flex;
  flex-direction: column;
  background-color: white;
  color: #666;
  z-index: 1050;
}

.modal .modal-header {
  position: relative;
  border-bottom: 2rpx solid #e3e3e3;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
}

.modal .modal-close {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -15rpx;
}

.modal .modal-body {
  overflow-y: auto;
  flex-grow: 1;
}
