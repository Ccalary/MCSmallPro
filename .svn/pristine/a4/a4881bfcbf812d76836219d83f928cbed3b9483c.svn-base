.products {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.product-item {
  width: 48%;
  overflow: hidden;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.product-image-container {
  position: relative;
  height: 350rpx;
}

.product-image {
  position: absolute;
  width: 100%;
  height: 100%;
}

.product-status {
  position: absolute;
  bottom: 10rpx;
  left: 10rpx;
  font-size: 22rpx;
}

.product-status-living {
  background-color: #ff5f8d;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
}

.product-status-video {
  background-color: #836970;
   padding: 6rpx 16rpx;
  border-radius: 30rpx;
}

.product-status-video image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-left: -10rpx;
  margin-right: 6rpx;
}
