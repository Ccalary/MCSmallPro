/* pages/comment/comment.wxss */

page {
  background-color: #fff;
  width: 100%;
}

.comment-all-data {
  display: flex;
  flex-direction: column;
}

.comment-item {
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
}

.comment-item-name {
  margin-left: 10rpx;
  color: #050505;
  font-size: 26rpx;
}
.comment-item-name-star {
  margin-left: 14rpx;
  display: flex;
  flex-direction: column;
}

.comment-item-content {
  margin-top: 15rpx;
  color: #424242;
  font-size: 24rpx;
}

.comment-item-attr {
  margin-top: 10rpx;
  margin-bottom: 30rpx;
  color: #848484;
  font-size: 22rpx;
}

.comment-item-image-item {
  width: 150rpx;
  margin-right: 20rpx;
  height: 150rpx;
}

.comment-item-image {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
}

.comment-head-name {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.comment-head-image {
  top: 20rpx;
  width: 70rpx;
  height: 70rpx;
  border: 2rpx solid #c4c4c4;
  border-radius: 70rpx;
}

.list-item-line {
  border-bottom: 1rpx solid lightgray;
}


.star-item{
    width:15px;
    height:15px;
    margin-left: 5rpx;
    margin-right: 5rpx;
    vertical-align: top;
}

.star {
  display: flex;
  flex-direction: row;
}
