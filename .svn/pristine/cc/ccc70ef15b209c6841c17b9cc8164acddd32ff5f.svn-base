.product {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: white;
  color: #666;
  padding: 20rpx 20rpx;
}

.product .product-close {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 35rpx;
  height: 35rpx;
}

.product .product-image {
  width: 190rpx;
  height: 190rpx;
}

.product .product-no {
  background-color: #f6f6f6;
  padding: 10rpx;
  font-size: 20rpx;
}

.product .product-line {
  background-color: #e3e3e3;
  height: 3rpx;
  margin-left: -20rpx;
  margin-right: -20rpx;
}

.product .product-attr-item {
  padding: 10rpx 30rpx;
  border: 2rpx solid #e3e3e3;
  border-radius: 5rpx;
  margin-right: 15rpx;
  margin-bottom: 20rpx;
  word-break: break-all;
}

.product .product-attr-item.selected {
  border-color: #ff5f8d;
}

.product .product-qty input, .product .product-qty button {
  width: 100rpx;
  height: 60rpx;
  border: 2rpx solid #e3e3e3;
  text-align: center;
  line-height: 58rpx;
}

.product .product-qty button {
  margin: 0;
  border-radius: 0;
  background-color: transparent;
  color: #ff5f8d;
}

.product .product-qty button::after {
  display: none;
}

.product .product-qty button[disabled] {
  color: rgba(0, 0, 0, 0.3);
}

.product .product-qty input {
  border-left: none;
  border-right: none;
  height: 56rpx;
  line-height: 56rpx;
}

.product-bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  border-top: 3rpx solid #e3e3e3;
}

.product .product-bottom-button {
  flex-grow: 1;
  display: flex;
  justify-content: space-between;
  padding: 14rpx 20rpx;
}

.product .product-add-cart, .product .product-show-buy {
  height: 80rpx;
  line-height: 78rpx;
  border-radius: 5rpx;
  border: 2rpx solid #ff5f8d;
  text-align: center;
  width: 180rpx;
  color: #ff5f8d;
}

.product .product-show-buy {
  background-color: #ff5f8d;
  color: white;
}

.product-image-show-cart-container {
  width: 110rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-left: 2rpx solid #e3e3e3;
}

.product .product-image-show-cart {
  width: 50rpx;
  height: 50rpx;
}

.skin-green .product .product-attr-item.selected {
  border-color: #148924;
}

.skin-blue .product .product-attr-item.selected {
  border-color: #1db3d8;
}

.skin-gray .product .product-attr-item.selected {
  border-color: #505050;
}

.skin-green .product .product-add-cart, .skin-green .product .product-show-buy {
  border-color: #148924;
  color: #148924;
}

.skin-blue .product .product-add-cart, .skin-blue .product .product-show-buy {
  border-color: #1db3d8;
  color: #1db3d8;
}

.skin-gray .product .product-add-cart, .skin-gray .product .product-show-buy {
  border-color: #505050;
  color: #505050;
}

.skin-green .product .product-show-buy {
  background-color: #148924;
  color: white;
}

.skin-blue .product .product-show-buy {
  background-color: #1db3d8;
  color: white;
}

.skin-gray .product .product-show-buy {
  background-color: #505050;
  color: white;
}
