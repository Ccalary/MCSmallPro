/**app.wxss**/
@import "/css/common.wxss";

view, navigator,text {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

page {
  background-color: #f3f3f4;
  color: #666;
  font-size: 26rpx;
}

.text-default {
  color: #666;
}

.text-primary {
  color: #ff5f8d;
}

button[plain].text-primary {
  color: #ff5f8d;
  border: 2rpx solid #ff5f8d;
}

.skin-blue .text-primary {
  color: #1db3d8;
}

.skin-blue button[plain].text-primary {
  color: #1db3d8;
  border: 2rpx solid #1db3d8;
}

.skin-green .text-primary {
  color: #148924;
}

.skin-green button[plain].text-primary {
  color: #148924;
  border: 2rpx solid #148924;
}

.skin-gray .text-primary {
  color: #505050;
}

.skin-gray button[plain].text-primary {
  color: #505050;
  border: 2rpx solid #505050;
}
